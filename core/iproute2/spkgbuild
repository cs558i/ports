# description	: Programs for basic and advanced IPV4-based networking
# depends	: elfutils libcap libmnl

name=iproute2
version=6.1.0
release=1
source="$name-$version.tar.xz::https://www.kernel.org/pub/linux/utils/net/$name/$name-v$version.tar.xz"

build() {
	cd $name-v$version

	sed -i /ARPD/d Makefile
	rm -fv man/man8/arpd.8
	
	[ -e /usr/lib/pkgconfig/xtables.pc ] || sed -i 's/m_ipt.o//' tc/Makefile

	make
	make DESTDIR=$PKG install
}
